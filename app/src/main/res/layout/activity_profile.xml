<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/activity_profile"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.comp313.gameonapp.java.ProfileActivity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/userid"
        android:id="@+id/tvPFName" />
    <EditText
        android:layout_width="210dp"
        android:enabled="false"
        android:layout_height="wrap_content"
        android:id="@+id/tbPUserId" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/userpassword"
        android:id="@+id/tvPLastName" />
    <EditText
        android:layout_width="210dp"
        android:inputType="textPassword"
        android:layout_height="wrap_content"
        android:id="@+id/tbPUserPassword" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/username"
        android:id="@+id/tvPUserName" />
    <EditText
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:id="@+id/tbPUserName" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/email"
        android:inputType="textEmailAddress"
        android:id="@+id/tvPUserEmail" />
    <EditText
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:id="@+id/tbPUserEmail" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:text="@string/userphone"
        android:id="@+id/tvPUserPhone" />
    <EditText
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:id="@+id/tbPUserPhone" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/update"
        android:id="@+id/btnPAddPatient"
        android:onClick="register"
        android:layout_marginLeft="37dp"
        android:layout_marginStart="37dp"
        android:layout_marginTop="47dp" />
</LinearLayout>
