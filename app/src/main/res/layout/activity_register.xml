<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.comp313.gameonapp.java.RegisterActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/userid"
        android:id="@+id/tvFirstName" />
    <EditText
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:id="@+id/tbUserId" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/userpassword"
        android:id="@+id/tvLastName" />
    <EditText
        android:layout_width="210dp"
        android:inputType="textPassword"
        android:layout_height="wrap_content"
        android:id="@+id/tbUserPassword" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/username"
        android:id="@+id/tvUserName" />
    <EditText
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:id="@+id/tbUserName" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/email"
        android:inputType="textEmailAddress"
        android:id="@+id/tvUserEmail" />
    <EditText
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:id="@+id/tbUserEmail" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:text="@string/userphone"
        android:id="@+id/tvUserPhone" />
    <EditText
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:id="@+id/tbUserPhone" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/register"
        android:id="@+id/btnAddPatient"
        android:onClick="register"
        android:layout_marginLeft="37dp"
        android:layout_marginStart="37dp"
        android:layout_marginTop="47dp" />

</LinearLayout>
